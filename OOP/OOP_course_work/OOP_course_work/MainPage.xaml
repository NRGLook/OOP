<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OOP_course_work"
             x:Class="OOP_course_work.MainPage"
             Title="PrioritizeMyFuture">

    <StackLayout Margin="20">
        <Label Text="Bank of Today" FontAttributes="Bold"/>
        <ListView ItemsSource="{Binding BankOfToday.Tasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold"/>
                            <Label Text="{Binding Time, StringFormat='Time: {0} minutes'}"/>
                            <Label Text="{Binding Hashtag, StringFormat='Hashtag: {0}'}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Task" Clicked="AddTaskButton_Clicked"/>
    </StackLayout>

</ContentPage>

